.cover {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
}

.content {
  width: 80%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  border-radius: 5px;
  overflow: hidden;
}

.content .title {
  height: 70rpx;
  line-height: 70rpx;
  background-color: #f2f2f2;
  text-align: center;
  font-size: 16px;
  font-weight: 600;
}

.list_item {
  display: flex;
  padding: 10rpx 20rpx;
  font-size: 33rpx;
  align-items: center;
  height: 70rpx;
}

.name {
  width: 150rpx;
}

.operation {
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  border-top: 1px solid #ccc;
  font-size: 16px;
}

.operation text {
  flex: 1;
  text-align: center;
}

.operation .border {
  border-right: 1px solid #ccc;
}
.cancel{
  color: #F57B4A;
}
