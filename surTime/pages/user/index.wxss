.content {
  position: relative;
}

.table {
  border: 0px solid darkgray;
  font-size: 30rpx;
  display: table;
  width: 750rpx;
  z-index: 10;
  overflow-y: auto;
  box-sizing: border-box
}

.table.hide {
  display: none;
}

.template.table {
  position: absolute;
  top: 0;
  z-index: 5;
  height: 100rpx;
  overflow: hidden;
}

.fixed .template {
  position: fixed;
  top: 90rpx;
}

.thead {
  background: snow;
  display: table-header-group;
  width: 750rpx;
  position: relative;
}

.tbody {
  display: table-row-group;
  z-index: 2;
  box-sizing: border-box;
}

.tr {
  display: table-row;
  width: 750rpx;
  height: 70rpx;
  box-sizing: border-box;
  background: #fff;
}

.th {
  display: table-cell;
  color: #000;
  height: 70rpx;
  line-height:70rpx;
  text-align: center;
  font-size: 14px;
  padding-left: 5px;
}

.td {
  display: table-cell;
  height: 100rpx;
  line-height: 1;
  text-align: center;
  font-size: 12px;
   box-sizing: border-box;
}

.thead .tr {
  height: 70rpx;
  background: #f8f9fb;
}

.tbody .tr {
  height: 90rpx;
}

.tbody .tr:nth-child(2n) {
  background-color: #f2f2f2;
}

.tbody .tr .td {
  height: 90rpx;
  line-height: 1;
  padding: 5px 0 5px 5px;
  min-width: 150rpx;
  vertical-align: middle
  
}

.tbody.hide {
  opacity: 0;
  z-index: 0;
}

.operate text {
  color: #fff;
  height: 50rpx;
  padding: 0 10rpx;
  line-height: 50rpx;
  margin: 0 8rpx;
  vertical-align: middle;
  border-radius: 10rpx;
  display: inline-block;
}

.operate .blue {
  background: #00a0e9;
}

.operate .red {
  background: #e23131;
}

.logo image {
  width: 70rpx;
  height: 70rpx;
  vertical-align: middle;
}

.bg-g {
  background: #e6f3f9;
}

.search {
  
}
.search swiper{
  height: 400rpx;
  padding: 0;
  box-sizing: border-box;
  
}
swiper-item{
  padding: 20rpx;
  box-sizing: border-box;
}
.search .title {
  width: 750rpx;
  text-align: center;
  margin: 45rpx 0;
  color: #fff;
  letter-spacing: 2rpx;
}
.item_list{
  display: flex;
  background: #1BB395;
  padding: 40rpx 20rpx;
  color: #fff;
  position: relative;
  border-radius: 5px;
 box-shadow: 0 0 10px #1BB395;
}
.item_list image{
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  width: 42rpx;
  height: 42rpx;
}
.active{
  background-color: #2C7EDC;
   box-shadow: 0 0 10px #2C7EDC;
}
.level{
  writing-mode:tb-rl;
  display: flex;
  justify-content: center;
  width:140rpx;
  align-items: center;
  border-right: 1px dashed #fff;
  font-size: 50rpx;
  letter-spacing: 10rpx;

}
.right_detail{
  text-align: center;
  height: 100%;
  padding: 5rpx 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;

}
.price{
border-bottom:  1px dashed #fff;
font-size: 32rpx;
}
.detail{
  font-size: 28rpx;
  display: flex;
  padding: 10rpx 0;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.pick_view {
  display: flex;
  width: 606rpx;
  height: 90rpx;
  margin: 10rpx auto;
  justify-content: center;
  align-items: center;
}

.recharge, .consume {
  display: flex;
  align-items: center;
  margin: 20rpx;
  font-size: 16px;
}

.consume image, .recharge image {
  width: 25rpx;
  height: 25rpx;
  margin: 10rpx;
}

.pick_view.fixed {
  position: fixed;
  top: 0;
  z-index: 30;
  margin: 0;
  width: 750rpx;
  padding: 0 60rpx;
  left: 0;
  background-color: #08d;
  box-sizing: border-box;
}

.pick_view .picker_content {
  width: 460rpx;
  display: flex;
  height: 55rpx;
  background-color: #fff;
  align-items: center;
  padding-left: 20rpx;
  text-align: center;
  font-size: 28rpx;
}

.picker_area {
  width: 90rpx;
}

.picker_year {
  width: 90rpx;
}

.pick_view button {
  width: 103rpx;
  height: 55rpx;
  line-height: 55rpx;
  font-size: 30rpx;
  padding: 0;
  background-color: #f74342;
  border-radius: 0;
  color: #fff;
}
