<view>

  <view class='search'>
    <view class='title'>A9数据查询</view>
    <view class='pick_view {{position}}'>
      <view class='picker_content'>
        <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
          <view class="picker_area">
            {{array[index]}}
          </view>
        </picker>
        <picker fields="year" mode="date" bindchange="bindYearChange">
          <view class="picker_year">
            {{year}}
          </view>
        </picker>
        <picker fields="day" mode="date" bindchange="bindDateChange">
          <view class="picker_time">
            {{month}}
          </view>
        </picker>
      </view>
      <view class='button'>
        <button>搜索</button>
      </view>
    </view>
  </view>
  <view class='content {{position}}'>
    <view class="table template">
      <view class='thead'>
        <view class="tr ">
          <view class="th"> 图片</view>
          <view class="th" data-target="id" bindtap='sortArr'> ASIN {{flag?'↓':'↑'}} </view>
          <view class="th " data-target="org" bindtap='sortArr'>站点 {{flag?'↓':'↑'}} </view>
          <view class="th ">操作</view>
        </view>
      </view>
      <view class='tbody hide'>
        <block wx:for="{{listData}}" wx:key="{{code}}">
          <view class="tr">
            <view class="td logo">
              <image src='{{item.img}}'></image>
            </view>
            <view class="td">{{item.ASIN}}</view>
            <view class="td">{{item.Country}}</view>
            <view class="td operate">
              <image src='../../../images/table/detail.png'></image>
              <image src='../../../images/table/info.png'></image>
            </view>
          </view>
        </block>
      </view>
    </view>
    <view class="table">
      <view class='thead'>
        <view class="tr ">
          <view class="th"> 图片</view>
          <view class="th" data-target="id" bindtap='sortArr'> ASIN {{flag?'↓':'↑'}} </view>
          <view class="th " data-target="org" bindtap='sortArr'>站点 {{flag?'↓':'↑'}} </view>
          <view class="th ">操作</view>
        </view>
      </view>
      <view class='tbody'>
        <block wx:for="{{listData}}" wx:key="{{code}}">
          <view class="tr">
            <view class="td logo">
              <image src='{{item.img}}'></image>
            </view>
            <view class="td">{{item.ASIN}}</view>
            <view class="td">{{item.Country}}</view>
            <view class="td operate">
              <image src='../../../images/table/detail.png'></image>
              <image src='../../../images/table/info.png'></image>
            </view>
          </view>
        </block>
      </view>
    </view>
  </view>


</view>