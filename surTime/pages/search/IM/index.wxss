.search .title {
  width: 750rpx;
  text-align: center;
  padding: 30rpx 0;
  color: #333;
  letter-spacing: 2rpx;
  height:50rpx;
  line-height: 50rpx;
}
input{
  width: 195rpx;
  border:1px solid #ccc;
  height: 50rpx;
  line-height: 50rpx;
  box-sizing: border-box;
}

.checkbox {
  width: 750rpx;
  padding:10rpx 30rpx;
  display: block;
  font-size: 13px;
  color: #333;
   height: auto;
   line-height: 40rpx;
   box-sizing: border-box;
}

.checkbox image {
  width: 30rpx;
  height: 30rpx;
  vertical-align:middle;
}

.history{
  position: absolute;
  right: 30rpx;
  top:30rpx;
  font-size: 24rpx;
  line-height: 50rpx;
  letter-spacing: 2rpx;
  color: #1487D9;
}
.picker_content{
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  margin: 10px 0;
 
  font-size: 14px;
}
.picker_content .item{
  width: 50%;
  display: flex
}
.items{
  display: flex;
}
picker{
  width: 195rpx;
  height: 50rpx;
}
.picker_area{
  width: 195rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: left;
  padding: 0 10rpx;
  box-sizing: border-box;
  border: 1px solid #ccc;
  font-size: 13px;
}
.flag{
  float: right;
  color:#818181;
}
.item text{
  width: 150rpx;
   
    font-size: 30rpx;
}
textarea{
  width: 248rpx;
  min-height: 50rpx;
  line-height: 50rpx;
  height: auto;
  border: 1px solid #CCC;
}
.tips{
  width: 260rpx;
  font-size: 12px;
  padding: 10rpx;
}
.button{
  width: 400rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin: 20px auto;
  text-align: center;
  background-color: #1487D9;
  color: #fff;
  border-radius: 5px;
  font-size: 33rpx;
}
.attention{
  border-top: 1px dotted #ccc;
  padding: 20px 10px;
  font-size: 26rpx;
}
.attention .titles{
  text-align: left;

  font-size: 30rpx;
  font-weight: 600;
  margin: 15rpx 0;
  color:#1487D9; 
}
