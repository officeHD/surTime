.stamp {
  width: 320rpx;
  height: 140rpx;
  padding: 0 10rpx;
  position: relative;
  overflow: hidden;
  float: left;
   margin: 27rpx;
}

.stamp:before {
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  left: 10rpx;
  right: 10rpx;
  z-index: -1;
 
}

.stamp:after {
  content: '';
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  right: 10rpx;
  bottom: 10rpx;
  box-shadow: 0 0 20rpx 1rpx rgba(0, 0, 0, 0.5);
  z-index: -2;
}

.stamp .par {
  float: left;
  padding: 16rpx 15rpx;
  width: 220rpx;
  border-right: 2rpx dashed rgba(255, 255, 255, 0.3);
  text-align: left;
  display: flex;
}

.stamp .par .p {
  color: #fff;
  font-size: 20rpx;
}

.stamp .par .span {
  font-size: 50rpx;
  color: #fff;
  margin-right: 5rpx;
}

.stamp .par .sign {
  font-size: 20rpx;
}

.stamp .par .sub {
  position: relative;
  top: -5rpx;
  color: rgba(255, 255, 255, 0.8);
}

.stamp .copy {
  height: 100%;
  vertical-align: text-bottom;
  font-size: 24rpx;
  color: rgb(255, 255, 255);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.stamp01 {
  background: #f39b00;
  background: radial-gradient(rgba(0, 0, 0, 0) 0, rgba(0, 0, 0, 0) 5rpx, #f39b00 5rpx);
  background-size: 15rpx 15rpx;
  background-position: 9rpx 3rpx;
}

.stamp01:before {
  background-color: #f39b00;
}

