.search {
  
  border: 1px solid transparent;
}

.search swiper {
  height: 400rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.search .title {
  width: 750rpx;
  text-align: center;
  margin: 45rpx 0;
  color: #fff;
  letter-spacing: 2rpx;
}

.pick_view {
  display: flex;
  width: 485rpx;
  height: 55rpx;
  margin: 10px auto;
  justify-content: center;
  align-items: center;
  border: 1px solid #00a0e9;
  border-radius: 5px;
}

.status {
  width: 161rpx;
  border-right: 1px solid #00a0e9;
  text-align: center;
  height: 100%;
  font-size: 32rpx;
  line-height: 55rpx;
}

.status:last-child {
  border-right: none;
}

.active {
  background-color: #00a0e9;
  color: #fff;
}
