.table {
  border: 0px solid darkgray;
  font-size: 30rpx;
  display: table;
  width: 750rpx;
  z-index: 10;
  overflow-y: auto;
  box-sizing: border-box
}
.thead {
  background: snow;
  display: table-header-group;
  width: 750rpx;
  position: relative;
}

.tbody {
  display: table-row-group;
  z-index: 2;
  box-sizing: border-box;
}
.tr {
  display: table-row;
  width: 750rpx;
 
  box-sizing: border-box;
  background: #fff;
}

.thead .tr ,.tbody .tr:nth-child(2n) {
  background-color: #f2f2f2;
}
.th {
  display: table-cell;
  color: #000;
  height: 80rpx;
  line-height:80rpx;
  text-align: center;
  font-size: 14px;
 
}
.td {
  display: table-cell;
  height: 70rpx;
  
  text-align: center;
  font-size: 12px;
