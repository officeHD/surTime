page {
  background: #f5f5f5;
}

.top {
  width: 750rpx;
  height: 260rpx;
  background-color: #319fe1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #fff;
}

.top image {
  width: 128rpx;
  height: 128rpx;
  margin-bottom: 20rpx;
}

.money {
  display: flex;
  text-align: center;
  color: #3ca3e2;
  font-size: 24rpx;
  background-color: #fff;
}

.money .left {
  height: 86rpx;
  line-height: 86rpx;
  flex: 1;
  color: #f33c3c;
  border-right: 1px solid #dfdfdf;
}

.money .right {
  height: 86rpx;
  line-height: 86rpx;
  flex: 1;
}

.weui_cell {
  background-color: #fff;
  position: relative;
  display: flex;
  align-items: center;
  border-top: 1px solid #dfdfdf;
  height: 86rpx;
}

.weui_cell_hd {
  display: inline-block;
  width:86rpx;
  margin-right: 5px;
  text-align: center;
}

.weui_cell_hd image {
  
  height: 55rpx;
  width: 55rpx;
  vertical-align: middle;
 
}

.weui_cell_bd {
  display: inline-block;
}

.weui_cell_bd_p {
  font-size: 28rpx;
  color: #4a4a4a;
}

.info_list {
  width: 100%;
}

.with_arrow {
  position: absolute;
  top: 18px;
  right: 15px;
  width: 15px;
  height: 15px;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.mt {
  margin-top: 20rpx;
  border-top: none;
}
