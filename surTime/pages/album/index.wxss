view {
  box-sizing: border-box;
}

.item-box {
  width: 750rpx;
  margin: 0auto;
  padding-top:0;
  padding-bottom: 130rpx;
}

.items {
  width: 100%;
}

.item {
  position: relative;
  border-top: 2rpx solid#eee;
  height: 160rpx;
  overflow: hidden;
  display: flex;
  vertical-align: middle;
}

.item:last-child {
  border-bottom: 2rpx solid#eee;
}

.inner {
  position: absolute;
  top: 0;
}

.inner.txt {
  background-color: #fff;
  width: 100%;
  z-index: 5;
  padding: 0 10rpx;
  transition: left 0.2s ease-in-out;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: flex;
  align-items: center;
}

.inner .content {
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  font-size: 30rpx;
  margin-left: 20rpx;
}

.content text {
  height: auto;
  line-height: 40rpx;
}

.content .num {
  font-size: 26rpx;
}

.inner.del {
  background-color: #e64340;
  width: 180rpx;
  text-align: center;
  z-index: 4;
  right: 0;
  color: #fff;
  height: 100%;
  line-height: 160rpx;
}

.item-icon {
  width: 120rpx;
  vertical-align: middle;
  margin-right: 16rpx;
}

.add_album {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 50%;
  text-align: center;
  background-color: #00a0e9;
  height: 100rpx;
  line-height: 100rpx;
  transform: translate(-50%, 0);
  color: #fff;
  z-index: 999;
}
.bg{
  background-color: rgba(0, 0, 0, 0.85);
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10;
}
.add_model{
  width: 80%;
  height: 300rpx;
  background-color: #fff;
  border-radius: 5Px;
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
 
}
.add_title{
  height: 80rpx;line-height: 80rpx;
  background-color: #158BDA;
  color: #fff;
  font-size: 34rpx;
  padding-left: 30rpx;
}
.close{
  float:right;
  margin-right: 30rpx;
  font-size: 40rpx;
}
.sure{
  height: 85rpx;
  line-height: 85rpx;
  position: absolute;
  bottom: 0;
   background-color: #158BDA;
  color: #fff;
  width: 100%;
  text-align: center;
}
.input_area{
  display: flex;
  height: 135rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
}
.input_area input{
  border: 1px solid #ccc;
  margin-top: 5px;
  padding-left: 20rpx;
}