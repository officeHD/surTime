.login_box {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
    font-size: 28rpx;
}

.input_list {
  width: 612rpx;
  height: 80rpx;
  padding: 0 10rpx;
  border: 1px solid #ccc;
  margin-bottom: 30rpx;
  display: flex;
  box-sizing: border-box;
  line-height: 80rpx;
}

.input_list input {
  height: 100%; 
 
  display: inline-block;
  width: 512rpx;
}

.input_logo {
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
  margin-bottom: 10rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
}

.message_input {
  width: 612rpx;
  height: 80rpx;
  display: flex;
  margin-bottom: 30rpx;
  justify-content: space-between;
}

.message_input.hide {
  display: none;
}

.send_message, .get_message {
  height: 80rpx;
  width: 215rpx;
  text-align: center;
  line-height: 80rpx;
  color: #00A0E9;
  
  /* border: 1px solid #ccc; */
}

.get_message {
