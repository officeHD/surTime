.input_list.hide {
  display: none;
}

.input_message {
  height: 80rpx;
  line-height: 80rpx;
  width: 350rpx;
  text-indent: 10rpx;
  border: 1rpx solid #ccc;
 
  /* display: block */
}

.input_message input {
  height: 80rpx;
  width: 270rpx;
  display: inline-block;
}

.login_type {
  display: flex;
  width: 513rpx;
  height: 80rpx;
  line-height: 80rpx;
  justify-content: space-between;
 
}

.login_type.hide {
  display: none;
}

.login_mes {
  color: #00a0e9;
}

.login_forget {
  color: #fa0000;
}

.login_btn {
  width: 513rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 80rpx;
  background-color: #00a0e9;
  text-align: center;
  color: #fff;
  margin: 10rpx 0;
}

.create_count {
  text-align: center;
