/* pages/user/index.wxss */
.userc{
  display: flex;
  justify-content: center;
   flex-direction: column;
align-items: center;
}
.bottom {
  
  width: 100%;
  display: flex;
  height: 20vh;
 
  justify-content: center;
  align-items: center;
}

.content {
  margin-top: 20px;
  width: 550rpx;
  height: 70vh;
  background-color: rgba(255, 255, 255, 0.85);
  border-radius: 8px;
  font-size: 13px;
 
  padding: 10px 20px;
  border: 1px solid #F4723D;
}

.title {
  text-align: center;
  padding: 5px 0;
}
.time{
  float: right;
}
.userList {
  max-height: 550rpx;
  overflow: hidden;
  overflow-y: auto;
}

.item {
  display: flex;
  align-items: center;
  padding: 5px 0;
  justify-content: space-between;
   align-items: center;
   border-bottom: 1px dotted #C1BBA6;
   height: 80rpx;
 
}
.iteml{
   display: flex;
  align-items: center;
}

.item image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 10px;
}

.lottery {
  width: 450rpx;
  text-align: center;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 8px;
  background-color: #F57B4A;
  font-size: 14px;
}
