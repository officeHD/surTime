/**app.wxss**/
.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    -webkit-text-size-adjust:none;
    -webkit-user-select: none;
    font-size: 35rpx;
    color: #333;
    font-family: Helvetica,Arial,"Helvetica Neue","Droid Sans","Microsoft YaHei",sans-serif;
}
.canvas {
    width: 100%;
    height: 200px;
}
.section {
  height: 40px;
  width: 600rpx;
 
  margin: 10px auto;
  border: 1px solid #ccc;
  line-height: 40px;
  text-align: center;
  border-radius: 5px;
}