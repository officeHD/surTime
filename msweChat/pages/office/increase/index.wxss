/* pages/insurance/life_insurance/index.wxss */

page {
  background-color: #f2f2f2;
}

.list_content {
  width: 100%;
  margin-top: 20rpx;
  background-color: #fff;
  margin-bottom: 120rpx;
}
.add_person{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  text-align: center;
  background-color: #fff;
  color: #ba1e17;
}

.insurelist {
  height: 220rpx;
  width: 100%;
  display: flex;
  padding: 10rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ccc;
}

.content {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding:20rpx 15rpx;
}

.title {
  display: flex;
  justify-content: space-between;
}

.status {
  font-size: 30rpx;
  color: #DA251E;
}

.noraml {
  color: #333;
}

.title_text {
  font-size: 36rpx;
}

.descript {
  font-size: 32rpx;
  color: #999;
}
