/**index.wxss**/

.container {
  background-color: #f2f2f2;
  box-sizing: border-box;
}

.userinfo {
  display: flex;
  padding: 10rpx 0;
  align-items: center;
  background: #f2f2f2;
  width: 100%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius:10rpx;
}

.userinfo-nickname {
  color: #333;
}
.userinfo-position{
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
}
.userinfo-text {
  display: flex;
  flex-direction: column;
}
.user_count{
  width: 100%;
  height: 140rpx;
  background-color: #f2f2f2;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}
.count_content{
  width: 90%;
  display: flex;
  height: 100rpx;
  background-color: #fff;
  border-radius: 10rpx;
  align-items: center;
   padding: 10rpx;
}
.count{
  display: flex;
   flex-direction: column;
   flex: 1;
   text-align: center;
  
   font-size: 26rpx;
   color: #999;
}
.count_line{
  border-right: 1rpx solid #ccc;
}
.count_num{
  color: #f00;
  font-size: 34rpx;
}
.weui_cell {
  background-color: #fff;
  position: relative;
  display: flex;
  padding: 10px;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  border-bottom: 1px solid #dadada;
}


.weui_cell_hd {
  display: inline-block;
  width: 20px;
  margin-right: 5px;
}

.weui_cell_hd image {
  width: 100%;
  height: 15px;
  vertical-align: -2px;
}

.weui_cell_bd {
  display: inline-block;
}

.weui_cell_bd_p {
  font-size: 14px;
  color: #939393;
}

.info_list {
  width: 100%;
}

.badge {
  position: absolute;
  top: 18px;
  right: 40px;
  width: 15px;
  height: 15px;
  line-height: 15px;
  background: #f00;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  font-size: 8px;
}

.with_arrow {
  position: absolute;
  top: 18px;
  right: 15px;
  width: 15px;
  height: 15px;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.hot_line {
  width: 100%;
  background-color: #f1f1f1;
  text-align: center;
  height: 80rpx;
  color: #ba1e17;
  font-size: 30rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
