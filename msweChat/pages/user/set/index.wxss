/* pages/user/set/index.wxss */
page{
  background-color: #f2f2f2;
  height: 100%;
}
.login_img{
  display: flex;
  height: 300rpx;
  align-items: center;
  justify-content:center;
}
.login_img image{
  width: 170rpx;
  height: 170rpx;
}
.weui_cell {
  background-color: #fff;
  position: relative;
  display: flex;
  padding: 10px;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  border-bottom: 1px solid #dadada;
}
.weui_cell_bd {
  display: inline-block;
}

.weui_cell_bd_p {
  font-size: 14px;
  color: #333;
}
.with_arrow {
  position: absolute;
  top: 12px;
  right: 15px;
  width: 15px;
  height: 15px;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

