page{
  background-color: #f2f2f2;
}
.login{
  height: 100%;
  width: 100%;
}
.login_img{
  display: flex;
  height: 300rpx;
  align-items: center;
  justify-content:center;
}
.login_img image{
  width: 170rpx;
  height: 170rpx;
}
.login_input{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.input_list{
  height: 90rpx;
  border-bottom: 1rpx solid #ccc;
   display: flex;
  
  align-items: center;
  margin-bottom: 30rpx;
  
}
.input_list image{
width: 40rpx;
height: 40rpx;
}
.input_name{
  font-size: 32rpx;
  margin-left: 10rpx;
  width: 120rpx;
}
.input_area{
  width:500rpx;
 
}
.reader{
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color: #666;
  margin-bottom: 30rpx;
}
.protocol{
  text-decoration: underline;
  color: #ba1e17;
}
.login_button{
  width: 100%;
  height: 100rpx;
}
.login_button button{
  width:92%;
  height: 80rpx;
  border-radius: 80rpx;
  background-color:  #ba1e17;
  color: #fff;
  line-height: 80rpx;
  font-size: 34rpx;

}
.hot_line{
  text-align: center;
  width: 100%;
  color: #999;
  font-size: 32rpx;
  position: absolute;
  bottom:160rpx;
}