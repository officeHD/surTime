<view class='login'>
  <view class='logo_box'>
    <image src="../../images/login/logo.png" class="logo" />
  </view>
  <view class='login_box'>
    <view class='input_list {{reset_pass?"":"hide"}}'>
      <input class='input_area' placeholder="请输入新密码" bindinput="userNameInput"></input>
    </view>
    <view class='input_list {{reset_pass?"":"hide"}}'>
      <input class='input_area' placeholder="请再次输入" bindinput="userNameInput"></input>
    </view>
    <view class='input_list'>
      <input class='input_area' placeholder="请输入手机号" bindinput="changePhoneNum"></input>
    </view>
    <view class='input_list {{by_message||reset_pass?"hide":""}}'>
      <input class='input_area' placeholder="请输入密码" bindinput="userNameInput"></input>
    </view>

    <view class='message_input {{by_message||reset_pass?"":"hide"}}'>
      <input class='input_message' placeholder="请输入验证码" bindinput="userNameInput"></input>
      <view class='get_message' bindtap="sendmessg">
        <button disabled="{{codeDis}}">{{getmsg}}</button>
      </view>
    </view>

    <view class='login_type'>
      <view class='login_mes' bindtap='onChangeLoginType'>
        {{login_type}}
      </view>
      <view bindtap='resetPassWord' class='login_forget {{by_message?"hide":""}}'>
        {{reset_word}}
      </view>
    </view>
    <view class='{{reset_pass?"hide":""}}'>
      <view class='login_btn' bindtap='login'>登录</view>
      <navigator url='../register/index' open-type="navigate" class='create_count'>创建账号</navigator>
    </view>
    <view class='suer_reset login_btn {{reset_pass?"":"hide"}}'>确认重置</view>
  </view>
  <view class='otherWay'>
      OR
  </view>
</view>